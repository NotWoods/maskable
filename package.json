{
    "name": "maskable",
    "private": true,
    "scripts": {
        "format": "prettier \"src/*.js\" \"*.{html,css,md}\" \"{workbox-,rollup.}config.js\" --write",
        "build": "npm run prepare -- --optimize && npm run nomodule && npm run minify:js && npm run minify:css && npm run sw && npm run gzip",
        "prepare": "pika install",
        "sw": "workbox generateSW workbox-config.js",
        "nomodule": "rollup -c",
        "minify:css": "sqwish style.css -o style.css",
        "minify:js": "find . -maxdepth 2 -iname \"*.js\" -exec terser --compress --mangle --module -o {} -- {} \\;",
        "gzip": "gzip -k9nrf index.html style.css manifest.json && find . -maxdepth 2 -iname \"*.js\" -o -iname \"*.svg\" -exec gzip -k9nrf {} \\;"
    },
    "dependencies": {
        "dark-mode-toggle": "^0.2.6",
        "file-drop-element": "^0.2.0"
    },
    "devDependencies": {
        "@pika/web": "^0.5.3",
        "prettier": "^1.18.2",
        "rollup": "^1.21.4",
        "sqwish": "^0.2.2",
        "terser": "^4.3.1",
        "workbox-cli": "^4.3.1"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "proseWrap": "always"
    }
}
