{
    "name": "maskable",
    "private": true,
    "scripts": {
        "format": "prettier \"src/*.js\" \"*.{html,css,md}\" \"{workbox-,rollup.}config.js\" --write",
        "build": "npm run prepare -- --optimize && npm run nomodule && npm run minify:js && npm run minify:css && npm run sw && npm run gzip",
        "prepare": "pika install",
        "sw": "workbox generateSW workbox-config.js",
        "nomodule": "rollup -c",
        "minify:css": "sqwish viewer.css -o viewer.css",
        "minify:js": "find . -maxdepth 2 -iname \"*.js\" -exec terser --compress --mangle --module -o {} -- {} \\;",
        "gzip": "gzip -k9nrf index.html viewer.css manifest.json && find . -maxdepth 2 -iname \"*.js\" -o -iname \"*.svg\" -exec gzip -k9nrf {} \\;"
    },
    "dependencies": {
        "dark-mode-toggle": "^0.4.12",
        "file-drop-element": "^0.2.0",
        "insights-js": "^1.2.9"
    },
    "devDependencies": {
        "@pika/web": "^0.6.1",
        "prettier": "^1.19.1",
        "rollup": "^1.27.5",
        "sqwish": "^0.2.2",
        "terser": "^4.4.0",
        "workbox-cli": "^4.3.1"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "proseWrap": "always",
        "overrides": [
            {
                "files": "*.html",
                "options": {
                    "printWidth": 120
                }
            }
        ]
    }
}
