{
  "name": "maskable",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "prettier . --ignore-path .gitignore --check",
    "postlint": "eslint .",
    "format": "prettier . --ignore-path .gitignore --write",
    "postformat": "eslint . --fix",
    "test": "npm run check && vitest",
    "check": "tsc --noEmit",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "dark-mode-toggle": "^0.15.0",
    "file-drop-element": "^1.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@typescript/lib-dom": "npm:@types/web@^0.0.138",
    "@vitejs/plugin-legacy": "^5.3.0",
    "eslint": "^9.7.0",
    "eslint-config-flat-gitignore": "^0.1.8",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.8.0",
    "jsdom": "^24.0.0",
    "prettier": "~3.3.3",
    "types-wm": "^1.1.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "vite-plugin-handlebars": "^2.0.0",
    "vite-plugin-pwa": "^0.20.0",
    "vite-plugin-webfont-dl": "^3.9.4",
    "vitest": "^2.0.3"
  },
  "prettier": {
    "singleQuote": true,
    "proseWrap": "always",
    "overrides": [
      {
        "files": [
          "*.html",
          "*.hbs"
        ],
        "options": {
          "printWidth": 120,
          "singleQuote": false
        }
      },
      {
        "files": "meta.hbs",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
