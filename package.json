{
  "name": "maskable",
  "private": true,
  "scripts": {
    "lint": "prettier . --ignore-path .gitignore --check && eslint . --ignore-path .gitignore",
    "format": "prettier . --ignore-path .gitignore --write && eslint . --ignore-path .gitignore --fix",
    "test": "npm run check && jest",
    "check": "tsc --noEmit",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "dark-mode-toggle": "^0.10.0",
    "file-drop-element": "^1.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^27.5.1",
    "@types/jest": "^27.4.1",
    "@typescript/lib-dom": "npm:@types/web@^0.0.62",
    "@vitejs/plugin-legacy": "^1.8.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.5.1",
    "prettier": "~2.6.2",
    "ts-jest": "^27.1.4",
    "types-wm": "^1.1.0",
    "typescript": "^4.6.3",
    "vite": "^2.9.13",
    "vite-plugin-handlebars": "^1.6.0",
    "vite-plugin-pwa": "^0.12.0",
    "vite-plugin-webfont-dl": "^2.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "proseWrap": "always",
    "overrides": [
      {
        "files": [
          "*.html",
          "*.hbs"
        ],
        "options": {
          "printWidth": 120,
          "singleQuote": false
        }
      },
      {
        "files": "meta.hbs",
        "options": {
          "parser": "html"
        }
      }
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts"
  }
}
