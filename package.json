{
  "name": "maskable",
  "private": true,
  "scripts": {
    "lint": "prettier . --ignore-path .gitignore --check && eslint . --ignore-path .gitignore",
    "format": "prettier . --ignore-path .gitignore --write && eslint . --ignore-path .gitignore --fix",
    "test": "npm run check && vitest",
    "check": "tsc --noEmit",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "dark-mode-toggle": "^0.10.0",
    "file-drop-element": "^1.0.1"
  },
  "devDependencies": {
    "@typescript/lib-dom": "npm:@types/web@^0.0.62",
    "@vitejs/plugin-legacy": "^2.1.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "jsdom": "^20.0.0",
    "prettier": "~2.7.1",
    "types-wm": "^1.1.0",
    "typescript": "^4.8.2",
    "vite": "^3.1.0",
    "vite-plugin-handlebars": "^1.6.0",
    "vite-plugin-pwa": "^0.12.6",
    "vite-plugin-webfont-dl": "^3.1.1",
    "vitest": "^0.23.1"
  },
  "prettier": {
    "singleQuote": true,
    "proseWrap": "always",
    "overrides": [
      {
        "files": [
          "*.html",
          "*.hbs"
        ],
        "options": {
          "printWidth": 120,
          "singleQuote": false
        }
      },
      {
        "files": "meta.hbs",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
