{
  "name": "maskable",
  "private": true,
  "scripts": {
    "lint": "prettier . --ignore-path .gitignore --check && eslint . --ignore-path .gitignore",
    "format": "prettier . --ignore-path .gitignore --write && eslint . --ignore-path .gitignore --fix",
    "build": "npm run prepare -- --optimize && npm run nomodule && npm run minify:js:src && npm run minify:js:modules && npm run minify:css && npm run sw && npm run minify:js:sw",
    "prepare": "snowpack",
    "sw": "workbox generateSW workbox-config.cjs",
    "nomodule": "rollup -c",
    "test": "npm run check && jest",
    "check": "tsc --noEmit",
    "minify:css": "csso css/viewer.css -o css/viewer.css && csso css/editor.css -o css/editor.css",
    "minify:js:src": "find src -iname \"*.js\" -exec terser --compress --mangle --module -o {} -- {} \\;",
    "minify:js:modules": "find web_modules -iname \"*.js\" -exec terser --compress --mangle --module -o {} -- {} \\;",
    "minify:js:sw": "terser --compress --mangle --module -o sw.js -- sw.js"
  },
  "dependencies": {
    "dark-mode-toggle": "^0.9.0",
    "file-drop-element": "^1.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^27.3.1",
    "@rollup/plugin-multi-entry": "^4.1.0",
    "@types/jest": "^27.0.2",
    "csso-cli": "^3.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.3.1",
    "prettier": "~2.4.1",
    "rollup": "^2.58.0",
    "snowpack": "^1.7.1",
    "terser": "^5.9.0",
    "ts-jest": "^27.0.7",
    "types-wm": "^1.1.0",
    "typescript": "^4.4.4",
    "workbox-cli": "^6.3.0"
  },
  "prettier": {
    "singleQuote": true,
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "snowpack": {
    "webDependencies": [
      "dark-mode-toggle",
      "file-drop-element"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts"
  }
}
